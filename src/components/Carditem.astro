---
import Tag from './Tag.astro'

const { imagen, titulo, descripcion, enlace, alt, id } = Astro.props
---

<a
  href={enlace}
  class="card card-compact bg-[--bg-100] text-[--text-100] h-[360px] w-72 shadow-sm shadow-[--primary-100] my-2 cursor-pointer hover:shadow-md hover:shadow-[--primary-100] transition-shadow"
>
  <figure>
    <img src={imagen} class="w-full" alt={alt} transition:name={`imagen-proyecto-${id}`} />
  </figure>
  <div class="card-body flex-1">
    <h3 class="card-title">
      {titulo}
    </h3>
    <p class="text-[--text-200] line-clamp-3 text-pretty text-lg">
      {descripcion}
    </p>
  </div>
</a>
