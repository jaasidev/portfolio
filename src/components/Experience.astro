---
import { getLenguaje } from "../i18n/getlenguaje";

const { currentLocale } = Astro;
const { titulo, fecha, lugar, rol } = getLenguaje(currentLocale).experiencia;
---

<section
  class="flex flex-col items-center justify-center mt-7 p-5"
  id="experience"
>
  <h2
    class="text-4xl w-full text-[--text-100] flex items-center gap-3 font-medium justify-center lg:justify-start"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon icon-tabler icon-tabler-devices-code"
      width="44"
      height="44"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M13 15.5v-6.5a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1v4m0 6a1 1 0 0 1 -1 1"
      ></path>
      <path d="M18 8v-3a1 1 0 0 0 -1 -1h-13a1 1 0 0 0 -1 1v12a1 1 0 0 0 1 1h7"
      ></path>
      <path d="M20 21l2 -2l-2 -2"></path>
      <path d="M17 17l-2 2l2 2"></path>
      <path d="M16 9h2"></path>
    </svg>
    {titulo}
  </h2>

  <article class="mt-5 w-full md:ml-3">
    <h3 class="text-3xl text-[--text-100] flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-map-pin-filled text-[--primary-100]"
        width="32"
        height="32"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z"
          stroke-width="0"
          fill="currentColor"></path>
      </svg>
      Code 200
    </h3>
    <span class="text-[--text-200] ml-4 text-sm">Frontend Developer</span>
  </article>
</section>
