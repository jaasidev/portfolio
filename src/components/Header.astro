<style>
  .shadow-screen {
    box-shadow: 0 0 0 100vmax rgba(0, 0, 0, 0.45);
  }
  nav input:checked ~ div {
    left: 0;
  }
  nav input:checked ~ div div {
    opacity: 1;
  }
</style>
<script>
  const check = document.getElementById('nav-mobile')
  const item = document.querySelectorAll('[data-item]')

  item.forEach((value) => {
    value.addEventListener('click', () => {
      check.checked = false
    })
  })
</script>
