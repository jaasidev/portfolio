---
const { tool } = Astro.props;

const bg =
  tool === "react"
    ? "bg-blue-100"
    : tool === "astro"
      ? "bg-orange-200"
      : tool === "tailwindcss"
        ? "bg-blue-200"
        : "";
---

<div class={` text-sm ${bg} px-5 py-3 rounded-lg font-semibold text-[--text-200] flex items-center gap-1 justify-between` }>
  <img src={`/${tool}.svg`} height="30" width="20"/>
  {tool}
</div>
